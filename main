int *rands()
{
    //cout<<"rand function entered";
	int arr[20];
	int n=0,j;
	do
	{
		int x=rand()%10+1;
		for(j=0;arr[j]!=x&&j<n;j++)
		{}
		if(j==n)
		{
		arr[j]=x;
		cout<<"in rand func";
		cout<<arr[j]<<"\t";
		n++;
		}
	}while(n<5);
	//cout<<"rand function exited";
	return arr;
}
